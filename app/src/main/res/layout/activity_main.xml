<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroundlogin"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/iv_logout"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_logout_24dp"
        />
    <LinearLayout
            android:background="@drawable/backgroundloginedt"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="16dp"
            android:text="Menu Utama"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/linear_masuk"
                        android:layout_margin="16dp"
                        android:padding="20dp"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/background_menu"
                        android:orientation="vertical"
                        android:layout_width="160dp"
                        android:layout_height="125dp">

                        <TextView
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                    android:textStyle="bold"
                    android:text="Absensi Masuk"
                    />
                <ImageView

                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_assignment_ind_24"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_pulang"
                android:layout_margin="16dp"
                android:padding="20dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/background_menu"
                android:orientation="vertical"
                android:layout_width="160dp"
                android:layout_height="125dp">

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:text="Absen Pulang"
                    />
                <ImageView

                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_work_outline_24"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>


            </LinearLayout>



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/linear_kehadiran"
                android:layout_margin="16dp"
                android:padding="20dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/background_menu"
                android:orientation="vertical"
                android:layout_width="160dp"
                android:layout_height="125dp">

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:text="Kehadiran"
                    />
                <ImageView

                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_calendar_today_24"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_tentang"
                android:layout_margin="16dp"
                android:padding="20dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/background_menu"
                android:orientation="vertical"
                android:layout_width="160dp"
                android:layout_height="125dp">

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:text="Tentang Aplikasi"
                    />
                <ImageView
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_info_24"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>


            </LinearLayout>



        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_halo_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Hallo ..."
        android:textColor="@color/colorBlack"
        android:textSize="32dp"
        android:textStyle="bold" />
    <TextView
    android:textStyle="bold"
    android:textSize="24dp"
    android:gravity="center"
    android:textColor="@color/colorBlack"
    android:layout_gravity="center"
    android:text="Selamat Bertugas"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    />
</LinearLayout>